<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record model="ir.ui.view" id="view_order_form_used_coupon">
        <field name="name">sale.order.form</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='pricelist_id']" position="after">
                <field name="used_coupon"/>
            </xpath>
        </field>
    </record>

    <record model="ir.ui.view" id="view_invoice_form_used_coupon">
        <field name="name">account.move.form</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="careone_sale_account.account_invoice"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='size']" position="after">
                <field name="used_coupon" readonly="1" force_save="1"/>
            </xpath>
        </field>
    </record>
</odoo>
