<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record model="ir.ui.view" id="view_order_form_used_coupon">
        <field name="name">sale.order.form</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='pricelist_id']" position="after">
                <field name="used_coupon"/>
            </xpath>
        </field>
    </record>

    <templates>
        <t t-name="view_order_form_report_used_coupon" t-inherit="sale.report_saleorder_document" t-inherit-mode="primary">
            <xpath expr="//div/div[2]/div[5]" position="after">
                <div t-if="doc.used_coupon.code" class="col-auto mw-100 mb-2">
                    <strong>Used Coupon:</strong>
                    <p class="m-0" t-field="doc.used_coupon.code"/>
                </div>
            </xpath>
        </t>
    </templates>
</odoo>
