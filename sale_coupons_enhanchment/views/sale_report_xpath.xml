<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <template id="view_order_form_report_used_coupon" inherit_id="sale.report_saleorder_document">
        <xpath expr="//div[@id='informations']/div[3]" position="after">
            <div t-if="doc.used_coupon.code" class="col-auto mw-100 mb-2">
                <strong>Used Coupon:</strong>
                <p class="m-0" t-field="doc.used_coupon.code"/>
            </div>
        </xpath>
    </template>

    <template id="view_invoice_form_report_used_coupon" inherit_id="account.report_invoice_document">
        <xpath expr="//div[@id='informations']/div[3]" position="after">
            <div t-if="o.used_coupon.code" class="col-auto mw-100 mb-2">
                <strong>Used Coupon:</strong>
                <p class="m-0" t-field="o.used_coupon.code"/>
            </div>
        </xpath>
    </template>
</odoo>


